<Window
    x:Class="AIImageGuide.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:AIImageGuide.Converters"
    Title="AI Image Guide"
    Width="800"
    Height="500"
    MinWidth="600"
    MinHeight="300"
    Background="{StaticResource PrimaryBackground}"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Navigation Menu  -->
        <Border
            Grid.Row="0"
            Padding="10"
            Background="{StaticResource SecondaryBackground}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="GalleryButton"
                    Click="GalleryButton_Click"
                    Content="Галерея" />
                <Button
                    x:Name="SearchButton"
                    Click="SearchButton_Click"
                    Content="Пошук" />
                <Button
                    x:Name="UploadButton"
                    Click="UploadButton_Click"
                    Content="Завантажити" />
                <Button
                    x:Name="ProfileButton"
                    Click="ProfileButton_Click"
                    Content="Профіль" />
                <Button
                    x:Name="AdminPanelButton"
                    Click="AdminPanelButton_Click"
                    Content="Панель адміна" />
                <Button
                    x:Name="LoginButton"
                    Click="LoginButton_Click"
                    Content="Вхід" />
                <Button
                    x:Name="RegisterButton"
                    Click="RegisterButton_Click"
                    Content="Реєстрація" />
                <Button
                    x:Name="LogoutButton"
                    Click="LogoutButton_Click"
                    Content="Вихід"
                    Visibility="Collapsed" />
            </StackPanel>
        </Border>

        <!--  Main Content  -->
        <ContentControl
            x:Name="MainContent"
            Grid.Row="1"
            Margin="15,0"
            Background="{StaticResource SecondaryBackground}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1" />
    </Grid>
</Window>