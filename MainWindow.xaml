<Window
    x:Class="AIImageGuide.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:AIImageGuide.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AIImageGuide"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AI Image Guide"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:BlockButtonConverter x:Key="BlockButtonConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Navigation Menu  -->
        <StackPanel Background="#F0F0F0" Orientation="Horizontal">
            <Button
                Margin="5"
                Padding="10,5"
                Click="HomeButton_Click"
                Content="Home" />
            <Button
                Margin="5"
                Padding="10,5"
                Click="UploadButton_Click"
                Content="Upload" />
            <Button
                Margin="5"
                Padding="10,5"
                Click="GalleryButton_Click"
                Content="Gallery" />
            <Button
                Margin="5"
                Padding="10,5"
                Click="LoginButton_Click"
                Content="Login" />
            <Button
                Margin="5"
                Padding="10,5"
                Click="RegisterButton_Click"
                Content="Register" />
            <Button
                Margin="5"
                Padding="10,5"
                Click="AdminPanelButton_Click"
                Content="Admin Panel" />
            <Button
                x:Name="LogoutButton"
                Margin="5"
                Padding="10,5"
                Click="LogoutButton_Click"
                Content="Logout"
                Visibility="Collapsed" />
        </StackPanel>

        <!--  Main Content  -->
        <ContentControl
            x:Name="MainContent"
            Grid.Row="1"
            Margin="10" />
    </Grid>
</Window>
