<Window
    x:Class="AIImageGuide.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AIImageGuide"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Navigation Menu  -->
        <StackPanel Background="#F0F0F0" Orientation="Horizontal">
            <Button
                Margin="5"
                Padding="10,5"
                Content="Home" />
            <Button
                Margin="5"
                Padding="10,5"
                Content="Guide" />
            <Button
                Margin="5"
                Padding="10,5"
                Content="Login" />
            <Button
                Margin="5"
                Padding="10,5"
                Content="Admin Panel" />
        </StackPanel>

        <!--  Main Content  -->
        <ContentControl Grid.Row="1" Margin="10" />
    </Grid>
</Window>
