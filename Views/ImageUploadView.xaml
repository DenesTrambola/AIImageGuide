<UserControl
    x:Class="AIImageGuide.Views.ImageUploadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AIImageGuide.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel MaxWidth="400" Margin="10,0,10,10">
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Завантажити зображення" />
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Назва" />
            <TextBox
                x:Name="TitleTextBox"
                Grid.Row="1"
                Margin="0,5"
                Padding="5" />
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Опис" />
            <TextBox
                x:Name="DescriptionTextBox"
                Grid.Row="2"
                Height="60"
                Margin="0,5"
                Padding="5"
                AcceptsReturn="True" />
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Категорія" />
            <ComboBox
                x:Name="CategoryComboBox"
                Grid.Row="3"
                Margin="0,5"
                Padding="5"
                DisplayMemberPath="Name" />
            <Button
                Grid.Row="4"
                Margin="0,5"
                Padding="10,5"
                Click="ChooseFileButton_Click"
                Content="Виберіть файл" />
            <Image
                x:Name="FileControl"
                Width="150"
                Height="150"
                Visibility="Collapsed" />
            <Button
                Grid.Row="5"
                Margin="0,10"
                Padding="10,5"
                Click="UploadButton_Click"
                Content="Завантажити" />
            <TextBlock
                x:Name="MessageTextBlock"
                Grid.Row="5"
                HorizontalAlignment="Center"
                Foreground="Red" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
