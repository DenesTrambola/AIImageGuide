<UserControl
    x:Class="AIImageGuide.Views.ImageUploadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AIImageGuide.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid MaxWidth="400" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="Upload Image" />
        <TextBox
            x:Name="TitleTextBox"
            Grid.Row="1"
            Margin="0,5"
            Padding="5" />
        <TextBox
            x:Name="DescriptionTextBox"
            Grid.Row="2"
            Height="60"
            Margin="0,5"
            Padding="5"
            AcceptsReturn="True" />
        <ComboBox
            x:Name="CategoryComboBox"
            Grid.Row="3"
            Margin="0,5"
            Padding="5"
            DisplayMemberPath="Name" />
        <Button
            Grid.Row="4"
            Margin="0,5"
            Padding="10,5"
            Click="ChooseFileButton_Click"
            Content="Choose File" />
        <TextBlock
            x:Name="FilePathTextBlock"
            Grid.Row="4"
            Margin="0,30,0,0"
            HorizontalAlignment="Center" />
        <Button
            Grid.Row="5"
            Margin="0,10"
            Padding="10,5"
            Click="UploadButton_Click"
            Content="Upload" />
        <TextBlock
            x:Name="MessageTextBlock"
            Grid.Row="5"
            Margin="0,40,0,0"
            HorizontalAlignment="Center"
            Foreground="Red" />
    </Grid>
</UserControl>
