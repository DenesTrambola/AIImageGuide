<UserControl
    x:Class="AIImageGuide.Views.AdminPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AIImageGuide.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="0,0,0,10"
            FontSize="24"
            FontWeight="Bold"
            Foreground="{DynamicResource AppForeground}"
            Text="Панель адміністратора" />
        <DataGrid
            x:Name="UsersDataGrid"
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Username}"
                    Header="Ім'я"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Email}"
                    Header="Ел. адреса"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Role}"
                    Header="Роль"
                    IsReadOnly="True" />
                <DataGridCheckBoxColumn
                    Width="95"
                    Binding="{Binding IsBlocked}"
                    Header="Заблоковано"
                    IsReadOnly="True" />
                <DataGridTemplateColumn Width="*" Header="Дії">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Click="BlockButton_Click" Content="{Binding IsBlocked, Converter={StaticResource BlockButtonConverter}}" />
                                <Button Click="ToggleRoleButton_Click" Content="Змінити роль" />
                                <Button Click="DeleteButton_Click" Content="Видалити" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="PreviousButton"
                Click="PreviousButton_Click"
                Content="Попередні"
                IsEnabled="False" />
            <TextBlock
                x:Name="PageInfoTextBlock"
                Margin="5"
                VerticalAlignment="Center"
                FontSize="13"
                Foreground="{DynamicResource AppForeground}" />
            <Button
                x:Name="NextButton"
                Click="NextButton_Click"
                Content="Наступні" />
        </StackPanel>
    </Grid>
</UserControl>
